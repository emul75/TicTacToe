@model TicTacToe.Entities.Game;

<div id="gameInfo">
    gameID: <span id="currentGameId">@Model.Id</span><br>
    gameName: @Model.Name<br>
    @* player1: @Model.PlayerX.Name<br> *@
    @* player2: @Model.PlayerO *@
</div>
@for (int i = 0; i < Model.Board.Size; i++)
{
    <div class="row">
        @for (int j = 0; j < Model.Board.Size; j++)
        {
            <div class="field" id="@i-@j" onclick="makeTurn(this, @i, @j, @Model.Id)"></div>
        }
    </div>
}
<button onclick="connectSignalR()">konnect to signullR</button>
<button onclick="joinGroup()">join game group</button>
<button onclick="notifyEnemy()">hemlo to enemy</button>
<br>
<button onclick="leaveGame()">-leave game-</button>